{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "SubmissionFields",
  "type": "object",
  "properties": {
    "submission_d": {
      "type": "string",
      "format": "uuid"
    },
    "bulk_submission_id": {
      "type": ["string"],
      "format": "uuid"
    },
    "office_account_number": {
      "type": "string",
      "pattern": "^[A-Z0-9]{6}$"
    },
    "submission_period": {
      "type": "string",
      "pattern": "^(JAN|FEB|MAR|APR|MAY|JUN|JUL|AUG|SEP|OCT|NOV|DEC)-[0-9]{4}$"
    },
    "area_of_law": {
      "type": "string",
      "enum": ["CIVIL", "CRIME", "MEDIATION", "CRIME LOWER", "LEGAL HELP"]
    },
    "status": {
      "type": "string"
    },
    "schedule_number": {
      "type": "string"
    },
    "previous_submission_id": {
      "type": "string",
      "format": "uuid"
    },
    "is_nil_submission": {
      "type": "boolean"
    },
    "number_of_claims": {
      "type": "integer",
      "minimum": 0
    }
  },
  "required": [
    "office_account_number",
    "submission_period",
    "area_of_law",
    "number_of_claims"
  ]
}